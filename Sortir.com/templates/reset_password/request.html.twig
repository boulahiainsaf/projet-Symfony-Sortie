{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}

    <div class="reset-password">
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="flash flash-echec" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Retablir le mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Rentrez votre adresse email et nous vous enverrons <br>
                un lien pour retablir le mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Envoi email avec lien</button>

    {{ form_end(requestForm) }}

    </div>
{% endblock %}

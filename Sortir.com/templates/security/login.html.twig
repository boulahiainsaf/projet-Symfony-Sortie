{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="full-page-flex">
<div  id="login-form-wrapper">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
    <div class="form-field">
    <label for="inputEmail">Identifier</label>
    <input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="saissez votre email ou votre pseudo">
    </div>
    <div class="form-field">
        <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    </div>
    <div class="form-field">
        <div class="checkbox mb-3">
            <label>
                <input id="remember-me-input" type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    </div>
    <div class="form-field">
    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
    </div>
    <div class="form-field">
    <a href="{{ path('app_forgot_password_request') }}"> Mot de passe oubli√© ? </a>
    </div>
</form>

</div>

    </div>
{% endblock %}

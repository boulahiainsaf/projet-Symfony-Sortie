<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Sortir.com{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Exo:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,900;1,200&display=swap" rel="stylesheet">

    {% endblock %}
    <link rel="icon" href="{{ asset('img/favicon.png') }}">
</head>
<body id="body-background-welcome">
<div class="body-wrapper-welcome">
        <a href="#"><img id="img-welcome-link-login" src="{{ asset('img/logo_welcome_dark.png') }}" alt="Sortir.com login"></a>
        <a href="{{path('app_login')}}" id="welcome-link-login"><p>SE CONNECTER</p></a>

        {% block body %}{% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
</div>
</body>
</html>